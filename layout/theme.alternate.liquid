<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {{ 'style.css' | asset_url | stylesheet_tag }}
    {{ content_for_header }}
  </head>

  <body class="page">
    <script
      src="https://unpkg.com/@shopify/theme-sections@4.1.1/dist/theme-sections.min.js"
      defer
    ></script>

    <script>
      document.addEventListener('DOMContentLoaded', () => Shopify.theme.sections.load('*'));
    </script>

    {% section 'alternate-header' %}

    {% render 'alternate-breadcrumbs' %}

    <main class="page__main main container" id="main">
      {{ content_for_layout }}
    </main>

    {% section 'alternate-footer' %}
  </body>
</html>
