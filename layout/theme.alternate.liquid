<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name='viewport' content='width=device-width,initial-scale=1'>
    <link rel='stylesheet' href='{{ 'theme.min.css' | asset_url }}'>
    {{ content_for_header }}
  </head>

  <body class="page">
    {% comment %} <script
      src="https://unpkg.com/@shopify/theme-sections@4.1.1/dist/theme-sections.min.js"
      defer
    ></script>

    <script>
      document.addEventListener('DOMContentLoaded', () => Shopify.theme.sections.load('*'));
    </script> {% endcomment %}

    {% section 'alternate-header' %}

    {% render 'alternate-breadcrumbs' %}

    <main class="page__main main container" id="main">
      {{ content_for_layout }}
    </main>

    {% section 'alternate-footer' %}
    <script src='{{ 'theme.min.js' | asset_url }}' defer></script>
  </body>



</html>
